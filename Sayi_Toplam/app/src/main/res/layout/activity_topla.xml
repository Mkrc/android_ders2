        android:layout_marginTop="17dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox">
    <RadioButton
        android:text="Erkek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
